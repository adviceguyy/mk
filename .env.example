# Mien Kingdom Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# PostgreSQL Database URL (REQUIRED)
DATABASE_URL=postgresql://localhost:5432/mienkingdom

# Google OAuth credentials (required for "Continue with Google")
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Bunny.net Video Storage
BUNNY_LIBRARY_ID=
BUNNY_API_KEY=
BUNNY_CDN_HOSTNAME=

# Cloudflare R2 Storage (S3-compatible)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT=

# AI API Keys
XAI_API=
GEMINI_KEY1=
GEMINI_KEY2=
GEMINI_KEY3=

# Vertex AI
VERTEX_AI_ID=
VERTEX_AI_KEY=

# Encryption key for API key storage (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=
